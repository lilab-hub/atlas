// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Authentication & Users
model Organization {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users       User[]
  spaces      Space[]
  projects    Project[]
  invitations Invitation[]
  templates   ProjectTemplate[]

  @@map("organizations")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String?
  passwordHash String?
  role         UserRole @default(MEMBER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  organizationId Int?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Relations
  assignedTasksLegacy Task[]       @relation("TaskAssigneeLegacy") // DEPRECATED
  taskAssignments     TaskAssignee[]
  createdTasks        Task[]       @relation("TaskCreator")
  comments      Comment[]
  attachments   Attachment[]
  invitations   Invitation[] @relation("UserInvitations")
  notifications Notification[]
  spaceMemberships SpaceMember[]
  projectMemberships ProjectMember[]
  auditLogs     AuditLog[]
  createdTemplates ProjectTemplate[]
  productivity  MemberProductivity[]

  // NextAuth
  accounts Account[]
  sessions Session[]

  @@map("users")
}

enum UserRole {
  ADMIN
  MEMBER
  READ_ONLY
}

// NextAuth required tables
model Account {
  id                Int     @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique @default(cuid())
  email     String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
  @@map("password_reset_tokens")
}

// Core Entities
model Space {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  color       String?  @default("#3B82F6") // Corporate blue default
  icon        String?  @default("folder")  // Lucide icon name
  isPublic    Boolean  @default(true)      // Public spaces are visible to all users
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  organizationId Int?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  templateId Int?
  template   ProjectTemplate? @relation("SpaceTemplate", fields: [templateId], references: [id], onDelete: SetNull)

  projects      Project[]
  members       SpaceMember[]

  @@map("spaces")
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  organizationId Int?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  spaceId Int
  space   Space  @relation(fields: [spaceId], references: [id], onDelete: Cascade)

  templateId Int?
  template   ProjectTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)

  epics         Epic[]
  sprints       Sprint[]
  tasks         Task[]
  notifications Notification[]
  members       ProjectMember[]
  productivity  MemberProductivity[]

  @@index([organizationId])
  @@index([spaceId])
  @@map("projects")
}

model Sprint {
  id        Int          @id @default(autoincrement())
  name      String
  goal      String?
  startDate DateTime?
  endDate   DateTime?
  status    SprintStatus @default(PLANNING)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  tasks   Task[]
  metrics SprintMetric[]

  @@index([projectId])
  @@index([status])
  @@map("sprints")
}

enum SprintStatus {
  PLANNING
  ACTIVE
  COMPLETED
}

model Epic {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  color       String?     @default("#8B5CF6") // Purple by default
  status      EpicStatus  @default(IN_PROGRESS)
  startDate   DateTime?
  targetDate  DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  tasks Task[]

  @@index([projectId])
  @@index([status])
  @@map("epics")
}

enum EpicStatus {
  TODO
  IN_PROGRESS
  DONE
  CANCELLED
}

model Task {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  status      String       @default("PENDING")
  priority    TaskPriority @default(MEDIUM)
  dueDate     DateTime?
  order       Int          @default(0) // For ordering subtasks
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  deletedAt   DateTime?    // Soft delete - null means not deleted

  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  sprintId Int?
  sprint   Sprint? @relation(fields: [sprintId], references: [id])

  epicId Int?
  epic   Epic?   @relation(fields: [epicId], references: [id])

  // DEPRECATED: Legacy single assignee (will be removed after migration)
  assigneeId Int?
  assignee   User? @relation("TaskAssigneeLegacy", fields: [assigneeId], references: [id])

  // Multiple assignees (many-to-many relationship)
  assignees TaskAssignee[]

  createdById Int
  createdBy   User   @relation("TaskCreator", fields: [createdById], references: [id])

  // Self-referential relationship for subtasks
  parentTaskId Int?
  parentTask   Task?  @relation("TaskHierarchy", fields: [parentTaskId], references: [id], onDelete: Cascade)
  subtasks     Task[] @relation("TaskHierarchy")

  comments      Comment[]
  attachments   Attachment[]
  notifications Notification[]
  auditLogs     AuditLog[]

  @@index([projectId])
  @@index([projectId, parentTaskId])
  @@index([sprintId])
  @@index([epicId])
  @@index([assigneeId])
  @@index([status])
  @@index([priority])
  @@index([deletedAt])
  @@map("tasks")
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

// Many-to-many relationship table for Task assignees
model TaskAssignee {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  taskId Int
  task   Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, userId])
  @@index([taskId])
  @@index([userId])
  @@map("task_assignees")
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  taskId Int
  task   Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("comments")
}

model Attachment {
  id       Int    @id @default(autoincrement())
  filename String
  url      String
  size     Int?
  mimeType String?
  createdAt DateTime @default(now())

  taskId Int
  task   Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  uploadedById Int
  uploadedBy   User @relation(fields: [uploadedById], references: [id])

  @@map("attachments")
}


model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String   // e.g., "created", "updated", "status_changed", "assigned"
  field     String?  // Field that was changed (if applicable)
  oldValue  String?  // Previous value
  newValue  String?  // New value
  details   String?  // Additional context
  createdAt DateTime @default(now())

  taskId Int?
  task   Task? @relation(fields: [taskId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}

model ProjectMember {
  id        Int            @id @default(autoincrement())
  role      ProjectRole    @default(MEMBER)
  joinedAt  DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  userId Int
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([projectId])
  @@index([userId])
  @@map("project_members")
}

enum ProjectRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

model SpaceMember {
  id        Int            @id @default(autoincrement())
  role      SpaceRole      @default(MEMBER)
  joinedAt  DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  spaceId Int
  space   Space  @relation(fields: [spaceId], references: [id], onDelete: Cascade)

  userId Int
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([spaceId, userId])
  @@map("space_members")
}

enum SpaceRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

model Invitation {
  id        Int              @id @default(autoincrement())
  email     String
  role      UserRole         @default(MEMBER)
  status    InvitationStatus @default(PENDING)
  token     String           @unique @default(cuid())
  expiresAt DateTime
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  invitedById Int
  invitedBy   User   @relation("UserInvitations", fields: [invitedById], references: [id])

  @@unique([email, organizationId])
  @@map("invitations")
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

model Notification {
  id        Int              @id @default(autoincrement())
  title     String
  message   String
  type      NotificationType @default(INFO)
  isRead    Boolean          @default(false)
  link      String?
  createdAt DateTime         @default(now())

  userId Int
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Optional references to related entities
  taskId    Int?
  task      Task?    @relation(fields: [taskId], references: [id])
  projectId Int?
  project   Project? @relation(fields: [projectId], references: [id])

  @@map("notifications")
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
  TASK_ASSIGNED
  TASK_UPDATED
  PROJECT_UPDATED
  COMMENT_ADDED
}

// Project Templates
model ProjectTemplate {
  id          Int              @id @default(autoincrement())
  name        String
  description String?
  category    TemplateCategory @default(GENERAL)
  icon        String?          @default("Folder")
  color       String?          @default("#6B7280")
  isDefault   Boolean          @default(false) // System templates vs custom
  usageCount  Int              @default(0)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  organizationId Int?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdById Int?
  createdBy   User? @relation(fields: [createdById], references: [id])

  states   TemplateState[]
  projects Project[]
  spaces   Space[]       @relation("SpaceTemplate")

  @@map("project_templates")
}

model TemplateState {
  id        Int     @id @default(autoincrement())
  name      String
  color     String  @default("#9CA3AF")
  order     Int     @default(0)
  isDefault Boolean @default(false)

  templateId Int
  template   ProjectTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@map("template_states")
}

enum TemplateCategory {
  DESARROLLO_SOFTWARE
  MARKETING
  DISENO
  VENTAS
  OPERACIONES
  RECURSOS_HUMANOS
  GENERAL
  PERSONALIZADO
}

// Sprint Tracking for Burndown/Velocity charts
model SprintMetric {
  id              Int      @id @default(autoincrement())
  date            DateTime
  plannedTasks    Int      @default(0)
  completedTasks  Int      @default(0)
  remainingTasks  Int      @default(0)
  idealRemaining  Int      @default(0)
  createdAt       DateTime @default(now())

  sprintId Int
  sprint   Sprint @relation(fields: [sprintId], references: [id], onDelete: Cascade)

  @@unique([sprintId, date])
  @@map("sprint_metrics")
}

// Member Productivity Tracking
model MemberProductivity {
  id                Int      @id @default(autoincrement())
  date              DateTime @default(now())
  tasksCompleted    Int      @default(0)
  tasksInProgress   Int      @default(0)
  tasksPending      Int      @default(0)
  productivityScore Int      @default(0) // 0-100
  createdAt         DateTime @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  projectId Int?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId, date])
  @@map("member_productivity")
}